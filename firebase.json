{
  "database": {
    "rules": "database.rules.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [ {
      "source": "/charge",
      "function": "charge"},
      {
        "source": "/sms",
        "function": "sms"}
    ]
  },
  "emulators": {
    "database": {
      "host": "localhost",
      "port": "8000"
    }
  }
}
